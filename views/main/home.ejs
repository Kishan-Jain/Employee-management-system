<%- include ('../base_files/header.ejs')  %>

<h1 class="d-flex justify-content-center text-success bg-dark pt-5 pb-5 fw-bold" >Employee Management System Server </h1>
<% if (massage){ %> 
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>Login alert</strong> <%= massage %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% } %>
<main class="form-signin text-center d-flex justify-content-center">
    <form action="/" method='post' autocomplete="off" class="w-25 " novalidate >
        
      <h1 class="h3 fw-semibold mb-3 mt-3 ">Please sign in</h1>
      
      <div class="form-floating mb-3  ">
        <input type="text" class="form-control" id="userId" placeholder="Enter userId" name="username" required />
        <label for="floatingInput">Enter UserId</label>
        
      </div>
      <div class="form-floating mb-3 ">
        <input type="password" class="form-control" id="password" name="pswd" placeholder="Enter password" required />
        <label for="floatingPassword">Enter Password</label>
      </div>
  
      <div class="checkbox mb-3 mx-2 text-start">
        <label>
          <input type="checkbox" value="saveInfo" name="saveInfo"> Remember me
        </label>
      </div>
      <input class="w-100 btn btn-lg btn-primary" type="submit" value="login">
      
      <h5 class=" my-3 ">If, Not register, <a href="/register" class="text-decoration-none" >register here</a> </h5>
    </form>
  </main>

<%- include ('../base_files/footer.ejs')  %>